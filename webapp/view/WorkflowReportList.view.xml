<mvc:View xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="managerlms.MangerLMSReport.controller.WorkflowReportList">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="Workflow Report">
                    <customHeader>
                        <Bar>
                            <contentLeft>
                                <Title text="Workflow Report" level="H1"/>
                            </contentLeft>
                            <contentRight>
                                <Text text="{userInfo>/displayText}" class="sapUiTinyMarginEnd"/>
                            </contentRight>
                        </Bar>
                    </customHeader>
                    <content>
                        <layout:Grid defaultSpan="L3 M6 S12" hSpacing="0.5rem" vSpacing="0" class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
                            <VBox class="sapUiTinyMargin">
                                <Label text="Request ID"/>
                                <Input id="requestIdInput"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Employee ID"/>
                                <Input id="employeeIdInput"
                                    showValueHelp="true"
                                    valueHelpRequest="onEmployeeValueHelp"
                                    placeholder="Select or enter Employee ID"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Employee Organization ID"/>
                                <Input id="employeeOrgIdInput"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Workflow Instance ID"/>
                                <Input id="workflowInstanceIdInput"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Class ID"/>
                                <Input id="classIdInput"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Class Title"/>
                                <Input id="classTitleInput"/>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Training Type"/>
                                <Select id="trainingTypeInput" width="100%">
                                    <core:Item key="" text="All"/>
                                    <core:Item key="1" text="In Company Course (Inside area)"/>
                                    <core:Item key="2" text="In Company Course (Outside area)"/>
                                    <core:Item key="4" text="Out of Company Course (IK / OOK)"/>
                                    <core:Item key="7" text="No Show"/>
                                    <core:Item key="11" text="Direct Enrollment"/>
                                    <core:Item key="12" text="New Business Event"/>
                                </Select>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Status"/>
                                <Select id="workflowStatusInput" width="100%">
                                    <core:Item key="" text="All"/>
                                    <core:Item key="Approved" text="Approved"/>
                                    <core:Item key="Pending" text="Pending"/>
                                    <core:Item key="Rejected" text="Rejected"/>
                                    <core:Item key="Cancelled" text="Cancelled"/>
                                </Select>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Class Start Date (Range)"/>
                                <HBox>
                                    <DatePicker id="classStartDateFrom" placeholder="From"/>
                                    <DatePicker id="classStartDateTo" placeholder="To"/>
                                </HBox>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Class End Date (Range)"/>
                                <HBox>
                                    <DatePicker id="classEndDateFrom" placeholder="From"/>
                                    <DatePicker id="classEndDateTo" placeholder="To"/>
                                </HBox>
                            </VBox>
                            <VBox class="sapUiTinyMargin">
                                <Label text="Creation Date (Range)"/>
                                <HBox>
                                    <DatePicker id="creationDateFrom" placeholder="From"/>
                                    <DatePicker id="creationDateTo" placeholder="To"/>
                                </HBox>
                            </VBox>
                        </layout:Grid>

                        <Toolbar>
                            <Button text="Previous Page" press="onPreviousPage"/>
                            <Button text="Next Page" press="onNextPage"/>
                            <ToolbarSpacer/>
                            <Button text="Export to Excel" press="onExportToExcel" type="Transparent"/>
                            <Button icon="sap-icon://clear-filter" press="onClearSearch" tooltip="Clear"/>
                            <Button text="Search" press="onSearch" type="Emphasized"/>
                        </Toolbar>

                        <Bar design="Header">
                            <contentLeft>
                                <Text text="{= 'Filtered Results: ' + ${countModel>/total}}" class="sapUiSmallMargin"/>
                            </contentLeft>
                            <contentRight>
                                <Text text="{= 'Page ' + (${view>/currentPage} + 1)}" class="sapUiSmallMarginEnd"/>
                            </contentRight>
                        </Bar>

                        <ScrollContainer width="100%" height="100%" horizontal="true" vertical="true">
                            <Table
                                id="workflowLogTable"
                                items="{workflowLogModel>/}"
                                mode="SingleSelectMaster"
                                itemPress=".onItemPress"
                                busyIndicatorDelay="0"
                                growing="false">
                                <columns>
                                    <Column width="10em" minScreenWidth="Tablet" demandPopin="true"><Text text="Request ID"/></Column>
                                    <Column width="8em" minScreenWidth="Tablet" demandPopin="true"><Text text="Employee ID"/></Column>
                                    <Column width="15em" minScreenWidth="Desktop" demandPopin="true"><Text text="Employee Name"/></Column>
                                    <Column width="10em" minScreenWidth="Desktop" demandPopin="true"><Text text="Employee Organization ID"/></Column>
                                    <Column width="8em" minScreenWidth="Tablet" demandPopin="true"><Text text="Class ID"/></Column>
                                    <Column width="20em" minScreenWidth="Desktop" demandPopin="true"><Text text="Class Title"/></Column>
                                    <Column width="10em" minScreenWidth="Tablet" demandPopin="true"><Text text="Class Start Date"/></Column>
                                    <Column width="10em" minScreenWidth="Tablet" demandPopin="true"><Text text="Class End Date"/></Column>
                                    <Column width="8em" minScreenWidth="Tablet" demandPopin="false"><Text text="Status"/></Column>
                                    <Column width="15em" minScreenWidth="Desktop" demandPopin="true"><Text text="Training Type"/></Column>
                                    <Column width="10em" minScreenWidth="Desktop" demandPopin="true"><Text text="Creation Date"/></Column>
                                    <Column width="15em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Email"/></Column>
                                    <Column width="8em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver No"/></Column>
                                    <Column width="15em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Name"/></Column>
                                    <Column width="20em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Position"/></Column>
                                    <Column width="10em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Org"/></Column>
                                    <Column width="20em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Org Name"/></Column>
                                    <Column width="20em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Position Name"/></Column>
                                    <Column width="20em" minScreenWidth="Desktop" demandPopin="true"><Text text="Approver Organization Name"/></Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <Text text="{workflowLogModel>REQUEST_ID}"/>
                                            <Text text="{workflowLogModel>EMPLOYEE_ID}"/>
                                            <Text text="{workflowLogModel>EMPLOYEE_NAME}"/>
                                            <Text text="{workflowLogModel>EMPLOYEE_ORGANIZATION_ID}"/>
                                            <Text text="{workflowLogModel>CLASS_ID}"/>
                                            <Text text="{workflowLogModel>CLASS_TITLE}"/>
                                            <Text text="{path: 'workflowLogModel>CLASS_START_DATE', formatter: '.formatDate'}"/>
                                            <Text text="{path: 'workflowLogModel>CLASS_END_DATE', formatter: '.formatDate'}"/>
                                            <Text text="{workflowLogModel>WORKFLOW_STATUS}"/>
                                            <Text text="{workflowLogModel>TRAINING_TYPE_DESC}"/>
                                            <Text text="{path: 'workflowLogModel>WLR_CREATION_DATE', formatter: '.formatDate'}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_EMAIL}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_ID}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_NAME}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_POSITION}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_ORG}"/>
                                            <Text text="{workflowLogModel>CA_APPROVER_ORG_NAME}"/>
                                            <Text text="{workflowLogModel>CA_POSITION_NAME}"/>
                                            <Text text="{workflowLogModel>CA_ORG_NAME}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
